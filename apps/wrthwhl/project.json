{
  "name": "wrthwhl",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/wrthwhl",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/wrthwhl",
        "outputPath": "dist/apps/wrthwhl"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/wrthwhl"
        },
        "production": {}
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["contentlayer2 dev --verbose", "nx serve wrthwhl"]
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "wrthwhl:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "wrthwhl:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "wrthwhl:build:production",
          "dev": false
        }
      }
    },

    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{workspaceRoot}/coverage/apps/wrthwhl"],
      "options": {
        "config": "apps/wrthwhl/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/wrthwhl/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec wrangler pages deploy dist/apps/wrthwhl/.next --project-name wrthwhl --branch main --commit-dirty=true"
      },
      "dependsOn": ["build"]
    }
  }
}
